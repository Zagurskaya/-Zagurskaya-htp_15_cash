<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Сервлеты zagurskaya</display-name>
    <filter>
        <filter-name>ExceptionHandlerFilter</filter-name>
        <filter-class>com.zagurskaya.cash.filter.ExceptionHandlerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ExceptionHandlerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>com.zagurskaya.cash.controller.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/do</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>401</error-code>
        <location>/jsp/errors/error401.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/jsp/errors/error403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/errors/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/errors/error500.jsp</location>
    </error-page>
    <error-page>
        <error-code>503</error-code>
        <location>/jsp/errors/error503.jsp</location>
    </error-page>

